<div>
  <%= link_to 'Nova tarefa', new_task_path %>
</div>
<p id="notice"><%= notice %></p>

<% if @tasks.empty? %>
  <div>Nenhuma tarefa cadastrada!</div>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Título</th>
        <th>Descriacão</th>
        <th>Completa</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.descrition %></td>
          <td>
            <% if task.completed? %>
              <%= task.completed.strftime("%d/%m/%Y") %>
            <% end %>
          </td>
          <td><%= link_to edit_task_path(task) do %>
                <span>Editar</span>
              <% end %>
          </td>
          <td><%= link_to task, method: :delete, data: { confirm: 'Você tem certeza?' } do %>
                  <span>Excluir</span>
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

