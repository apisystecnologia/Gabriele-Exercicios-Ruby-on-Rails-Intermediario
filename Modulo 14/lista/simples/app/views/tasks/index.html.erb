<div class="text-right">
  <%= link_to 'Nova tarefa', new_task_path, :class=> "btn btn-primary", :role=> "button" %>
</div>
<p id="notice"><%= notice %></p>

<% if @tasks.empty? %>
  <div class="alert alert-warning" role="alert">Nenhuma tarefa cadastrada!</div>
<% else %>
  <table class='table table-hover table-bordered'>
    <thead>
      <tr>
        <th>Título</th>
        <th>Criacão:</th>
        <th>Completa quando?</th>
        <th>Excluir</th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= link_to edit_task_path(task) do %>
                <%= task.created_at.strftime("%d/%m/%Y") %>
              <% end %>
          </td>
          <td>
            <% if task.completed? %>
              <%= task.completed.strftime("%d/%m/%Y") %>
            <% end %>
          </td>
          <td><%= link_to task, method: :delete, data: { confirm: 'Você tem certeza?' } do %>
                  <span class="glyphicon glyphicon-remove-sign">X</span>
              <% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

