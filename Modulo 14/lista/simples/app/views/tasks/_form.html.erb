<%= form_for(task, :html => {:class => 'form-horizontal'}) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, "Título:", :class=>"control-label" %>
    <%= f.text_field :title, :class=> "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :descrition, "Descrição:", :class=>"control-label" %>
    <%= f.text_area :descrition, :class=> "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :completed, "Quando a tarefa foi finalizada:", :class=>"control-label" %>
    <%= f.text_field :completed, :class=> "datepicker form-control col-sm-2"%>
  </div>

  <div class="form-group">
    <%= f.submit "Salvar Tarefa", :class=> "btn btn-primary"%>
  </div>

  <script type="text/javascript">
    $(document).ready(function(){
      $('.datepicker').datepicker({
        format: 'dd/mm/yyyy'
      });
    });
  </script>
<% end %>
